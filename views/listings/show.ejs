<%layout("/layouts/boilerplate.ejs")%>


    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%=listing.title%>
                    </b><br>
                    <%=listing.description%><br><br>
                        <% if (listing.price) { %>
                            &#8377;<%= Number(listing.price).toLocaleString("en-IN") %>/night
                                <% } else { %>
                                    Price not available
                                    <% } %>
                                        <br>
                                        <%=listing.location%><br>
                                            <%=listing.country%>
                </p>
            </div>
            <br>
            <div class="col-1"><button class="add-btn edit-btn"><a href="/listings/<%=listing._id%>/edit"
                        class="edit-btn">Edit</a></button><br>
                <form method="post" action="/listings/<%=listing._id%>/?_method=DELETE"><button
                        class="edit-btn btn-dark add-btn">Delete</button>
                </form>
            </div>
        </div>
    </div>