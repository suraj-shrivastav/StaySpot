
    <%layout("layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2" class="needs-validation" novalidate>
            <h1><%=listing.title%> :</h1>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3 cols">
                    <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" placeholder="description" class="form-control"
                            required><%=listing.description%></textarea>
                </div>
                <div class="row">
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                            <input type="number" name="price" id="price" placeholder="price" value="<%=listing.price%>" class="form-control"
                                required>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" id="location" value=<%=listing.location%> class="form-control"
                                required>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" id="country"
                            value=<%=listing.country%> class="form-control" required>
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Update</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>